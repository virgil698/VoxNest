{
  "_meta": {
    "version": "2.0.0",
    "description": "VoxNest 增强扩展清单 - 支持多文件扩展和强大界面控制",
    "lastUpdated": "2025-09-15T12:00:00Z",
    "totalExtensions": 2
  },
  "extensions": [
    {
      "id": "cookie-consent",
      "name": "Cookie 同意横幅",
      "version": "1.0.0",
      "type": "plugin",
      "description": "符合 GDPR 和 CCPA 规定的 Cookie 同意横幅插件，提供可自定义的同意管理功能",
      "author": "VoxNest Team",
      "main": "CookieConsent.tsx",
      "enabled": true,
      "dependencies": ["react", "antd"],
      "permissions": [
        "storage.local",
        "cookies.read", 
        "cookies.write",
        "overlay.root"
      ],
      "tags": ["cookie", "gdpr", "privacy", "consent", "compliance"],
      "slots": [
        "overlay.root"
      ],
      "capabilities": {
        "ui": true,
        "storage": true,
        "cookieManagement": true,
        "privacyCompliance": true
      },
      "features": [
        "细粒度 Cookie 分类管理",
        "GDPR/CCPA 合规",
        "自定义样式和位置",
        "响应式设计",
        "本地偏好存储"
      ]
    },
    {
      "id": "dark-mode-theme",
      "name": "明暗模式切换器",
      "version": "2.0.0",
      "type": "theme",
      "description": "智能明暗模式主题切换器，支持系统偏好检测、自动切换、渐变动画和个性化定制",
      "author": "VoxNest Team", 
      "main": "ThemeToggle.tsx",
      "enabled": true,
      "dependencies": ["react", "antd", "dayjs"],
      "permissions": [
        "storage.local",
        "storage.sync",
        "system.theme",
        "notifications.create"
      ],
      "tags": ["theme", "dark-mode", "accessibility", "ui", "customization"],
      "slots": [
        "nav.user",
        "overlay.root", 
        "admin.sidebar"
      ],
      "hooks": [
        "theme:change",
        "system:theme-change"
      ],
      "capabilities": {
        "ui": true,
        "theming": true,
        "systemIntegration": true,
        "accessibility": true,
        "scheduler": true
      },
      "features": [
        "智能主题切换",
        "系统偏好检测",
        "定时切换功能",
        "自定义颜色方案",
        "辅助功能支持",
        "丰富动画效果"
      ]
    }
  ]
}
